<!DOCTYPE html>
<html>
<head>
  <title>Propertymanager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Begin Wrapper -->
<div id="wrapper">

  <!-- Begin Header -->
  <div id="header">

    This is the Header

  </div>
  <!-- End Header -->

  <!-- Begin Naviagtion -->
  <div id="navigation">
  	
  	<div id="login">
	  <% if current_user %>
	
	  	<%= link_to "Edit Profile", edit_user_path(:current) %>
	 	<%= link_to "Logout", logout_path %>
	 	<%= link_to "Leases", leases_path %>
		<%= link_to "Repair Requests", repair_requests_path%>
	 	 
	  <% else %>
	
		<%= link_to "Register", new_user_path %>
		<%= link_to "Login", login_path %>
	
	  <% end %>

    </div>

  </div>
  <!-- End Naviagtion -->

  <!-- Begin Content -->
  <div id="content">

    <% if flash[:error] -%>
        <div id='error'><%=h flash[:error] %></div>
    <% end -%>
    <% if flash[:notice] -%>
        <div id='notice'><%=h flash[:notice] %></div>
    <% end -%>

    <%= yield %>


  </div>
  <!-- End Content -->

  <!-- Begin Footer -->
  <div id="footer">

    This is the Footer

  </div>
  <!-- End Footer -->

</div>
<!-- End Wrapper -->

</body>
</html>
